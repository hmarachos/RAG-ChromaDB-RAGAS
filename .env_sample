# OpenAI API Key
# Получить ключ можно на https://platform.openai.com/
OPENAI_API_KEY=sk-proj-ваш_секретный_ключ_здесь

# Конфигурация моделей (согласно вашему config.py)
EMBEDDING_MODEL=text-embedding-3-small
CHAT_MODEL=gpt-3.5-turbo

# Пути к файлам и базе данных
CHROMA_DB_PATH=./chroma_db
DATA_DIR=./data

# Параметры обработки текста
CHUNK_SIZE=500
CHUNK_OVERLAP=100
TOP_K=5

# (Опционально) Настройки для RAGAS мониторинга
# Если вы используете LangSmith для отслеживания экспериментов
# LANGCHAIN_TRACING_V2=true
# LANGCHAIN_API_KEY=ls__ваш_ключ
